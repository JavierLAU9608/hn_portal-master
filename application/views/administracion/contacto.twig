<!-- Modal -->
<div class="modal fade" id="contactform" tabindex="-1" role="dialog" aria-labelledby="contactformLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			{{ form_open('contact-email', {'id' :'form_contact', 'class' :'form-horizontal'}) }}
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="contactformLabel">{{ trans('contacto_us_home') }}
					- {{ trans('hotel_nacional_cuba') }}</h4>
			</div>
			<div class="modal-body">
				<div id="contact_msg"></div>
				<div class="form-group">
					<label for="contact_correo" class="col-sm-2 control-label">{{ trans('correo') }}</label>
					<div class="col-sm-10">
						<input type="email" required="required" name="correo" class="form-control correo" id="contact_correo" placeholder="{{ trans('correo') }}">
					</div>
				</div>

				<div class="form-group">
					<label for="contact_nombre" class="col-sm-2 control-label">{{ trans('nombre_completo') }}</label>
					<div class="col-sm-10">
						<input type="text" required="required" name="nombre" class="form-control" id="contact_nombre" placeholder="{{ trans('nombre_completo') }}">
					</div>
				</div>

				<div class="form-group">
					<label for="pais_fk" class="col-sm-2 control-label">{{ trans('user_pais') }}</label>
					<div class="col-sm-10">
						<select name="pais_fk" id="pais_fk" class="form-control" required="required">
							<option value="">{{ trans('seleccione_pais') }}</option>
							{% for p in app.countries %}
								<option value="{{ p.id }}">{{ p.nombre_trad != null ? p.nombre_trad : p.nombre }}</option>
							{% endfor %}
						</select>
					</div>
				</div>

				<div class="form-group">
					<label for="contact_msg" class="col-sm-2 control-label">{{ trans('mensaje') }}</label>
					<div class="col-sm-10">
						<textarea class="form-control" name="msg" id="contact_msg" cols="30" rows="10" required="required"></textarea>
					</div>
				</div>

			</div>

			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<input type="submit" class="btn btn-default" value="{{ trans('enviar_msg') }}"/>
			</div>
			</form>
		</div>
	</div>
</div>