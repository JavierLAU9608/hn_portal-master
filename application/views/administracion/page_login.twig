{% extends 'base.twig' %}

{% block content %}
<div class="container">
    <div style="padding-top: 200px;">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-2" id="center_area">
                {{ form_open('', {'class' : 'form-horizontal'}) }}
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ trans('correo') }}</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="email" autofocus="autofocus" type="text" name="correo" placeholder="{{ trans('correo') }}" value="{{ set_value('correo') }}">
                        <span class="help-block">{{ form_error('correo') }}</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ trans('contrasenna') }}</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="password" name="password" placeholder="{{ trans('contrasenna') }}" value="">
                        <span class="help-block">{{ error }}</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" {{ set_value('remember_pass')|default(false) ? 'checked="checked"' : '' }} name="remember_pass"/> {{ trans('entrar_recordar_contrasenna') }}
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default">{{ trans('entrar_iniciar_session') }}</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}